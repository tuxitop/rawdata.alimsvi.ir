
extends layout

block append vars
    - bodyclass = 'article-detail'

block prepend title
    | #{ page.title + ' - '}

block header
    include author
    h1= page.title
    p.author
        | #{ 'نوشته شده توسط ' }
        mixin author(page.metadata.author)

block content
    article.article
        section.content!= typogr(page.html).typogrify()

block prepend footer
    div.nav
        a(href=contents.index.url) &laquo; Full blog

block append javascripts
    if page.metadata.mathjax
        include mathjax
  
