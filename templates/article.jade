extends layout

block vars
    - var bodyClass = "article-page"

block title
     | #{page.title} | #{locals.name} | علی موسوی

block content
    article.article.full
        .row
            .col-md-2.hidden-xs.hidden-sm.meta.meta-sidebar
                time.text-muted
                    span.fa.fa-calendar
                    span= moment.utc(page.date).format('jDD jMMMM jYYYY')
                .comments.text-muted
                    span.fa.fa-comment
                    a(href='#disqus_thread') دیدگاه‌ها
                .tags.text-muted
                    span.fa.fa-tag
                    - var tags = env.helpers.getTagsFromArticle(page)
                    ul
                        each tag in tags
                            li
                                a.big-tag(href=env.helpers.getTagHome(tag).url)= tag
            .col-md-8.col-sm-12(role="main")
                header
                    h2
                        a(href=page.url)= page.title
                    .meta.hidden-md.hidden-lg.text-muted
                        .tags
                            span.fa.fa-tag
                            - var tags = env.helpers.getTagsFromArticle(page)
                            each tag in tags
                                a.big-tag(href=env.helpers.getTagHome(tag).url)= tag
                        span.fa.fa-calendar
                        span= moment.utc(page.date).format('jDD jMMMM jYYYY')
                        span.seperator -
                        span.fa.fa-comment 
                        a(href='#disqus_thread') دیدگاه‌ها
                section.content!= typogr(page.html).typogrify()
                
                section.comments
                    include disqus

block append javascripts
    if page.metadata.mathjax
        include mathjax
